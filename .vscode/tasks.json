{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "PHP: Start local server",
			"type": "shell",
			"windows": {
				"command": "cd src && php",
				"args": [
					"-S",
					"localhost:8888"
				]
			},
			"detail": "Start a PHP local server for content preview.",
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			}
		},
		{
			"type": "npm",
			"script": "make",
			"problemMatcher": [],
			"label": "NPM: Build",
			"detail": "Build the app with electron-forge make",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": [
				"NPM: Install",
				"CSS: Compile"
			],
			"dependsOrder": "sequence"
		},
		{
			"type": "npm",
			"script": "install",
			"group": "none",
			"problemMatcher": [],
			"label": "NPM: Install",
			"detail": "Install dependencies with npm install",
		},
		{
			"type": "npm",
			"script": "start",
			"problemMatcher": [],
			"label": "NPM: Start",
			"detail": "Start a live demo of the app with electron-forge start"
		},
		{
			"label": "CSS: Compile",
			"type": "shell",
			"osx": {
				"command": "npx",
				"args": [
					"tailwindcss",
					"-i",
					"./src/styles/template.css",
					"-o",
					"./src/styles/output.css"
				]
			},
			"linux": {
				"command": "npx",
				"args": [
					"tailwindcss",
					"-i",
					"./src/styles/template.css",
					"-o",
					"./src/styles/output.css"
				]
			},
			"windows": {
				"command": "npx",
				"args": [
					"tailwindcss",
					"-i",
					".\\src\\styles\\template.css",
					"-o",
					".\\src\\styles\\output.css"
				]
			},
			"problemMatcher": [],
			"detail": "Compile Tailwind CSS output file"
		}
	]
}
